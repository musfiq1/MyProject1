@model Product
@{
    ViewData["Title"] = "Update";
}

<div class="intro-y flex items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">
        Update product
    </h2>
</div>
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <!-- BEGIN: Form Layout -->

        <form asp-area="Admin" asp-controller="Product" asp-action="UpdateImage" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" style="color:red; margin-bottom:20px;"></div>
            <input asp-for="ID" hidden />
            <input asp-for="Image" hidden />
            <div class="intro-y box p-5">
                <div>
                    <label asp-for="ImageFile">Image</label>
                    <img src="~/Uploads/Images/@Model.Image" alt="Alternate Text" />
                    <input asp-for="ImageFile" style="margin-bottom:20px;" class="input w-full border mt-2" placeholder="Input text" value="@Model.Image">
                </div>
                @*<a asp-area="Admin" asp-controller="Product" asp-action="UpdateImage" class="button w-24 bg-theme-1 text-white" style="width:120px; position:relative; left:343px;">Update Image</a>*@
                <button type="submit" class="button w-24 bg-theme-1 text-white">Update Image</button>


            </div>
        </form>

        <form asp-area="Admin" asp-controller="Product" asp-action="Update" method="post" style="position:relative; top:-34px" enctype="multipart/form-data">
            <div asp-validation-summary="All" style="color:red; margin-bottom:20px;"></div>
            <input asp-for="ID" hidden />
            <input asp-for="Image" hidden />
            <div class="intro-y box p-5">

                <div>
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="input w-full border mt-2" placeholder="Input text">
                </div>
                <div>
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" class="input w-full border mt-2" placeholder="Input text">
                </div>

                <div class="mt-3">
                    <label asp-for="BrandId">Category</label>
                    <div class="mt-2">
                        <select asp-for="BrandId" asp-items="@(new SelectList(ViewBag.Brands, "ID","Name"))" data-placeholder="Select your product category" class="select2 w-full">
                            <option selected="" disabled>Select your brand</option>
                        </select>
                    </div>
                </div>
                <div class="text-right mt-5">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="button w-24 border text-gray-700 mr-1">Cancel</a>
                    <button type="submit" class="button w-24 bg-theme-1 text-white">Update</button>
                </div>
            </div>
        </form>


        <!-- END: Form Layout -->
    </div>
</div>
