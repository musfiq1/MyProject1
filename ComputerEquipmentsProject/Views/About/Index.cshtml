@model VmProductInfo
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="products">
        <div class="container">
            <div class="header">
                <h1>Leading in innovation</h1>
            </div>

            <div class="row">
                <div class="category col-lg-2 col-md-12">
                    <h2>Categories</h2>
                    <ul>
                        <li><a href="">All</a></li>
                        @foreach (var item in Model.Category)
                        {
                            <li><a href="">@item.Name</a></li>
                        }
                    </ul>
                </div>
                <div class="brand col-lg-2 col-md-12">
                    <h2>Brands</h2>
                    <ul>
                        <li><a href="">All</a></li>
                        @foreach (var item in Model.Brand)
                        {
                            <li><a href="">@item.Name</a></li>
                        }
                    </ul>
                </div>
                <div class="model col-lg-7 col-md-12">
                    @foreach (var item in Model.Products)
	                {
                        <div class="col-lg-6 col-md-6 custom-col">
                            <div class="item">
                                <img src="~/uploads/Images/@item.Image" alt="">
                            </div>
                            <div class="info">
                                <div class="prodname">
                                    <p>@item.Name</p>
                                </div>
                                <div class="price">
                                    <p>@item.Brand.Name</p>
                                    <p>@item.Price</p>
                                </div>
                            </div>
                        </div>
	                }
                    
                </div>
                <!-- <div class="box">
                  <div class="square" style="--i:0"></div>
                  <div class="square" style="--i:1"></div>
                  <div class="square" style="--i:2"></div>
                  <div class="square" style="--i:3"></div>
                  <div class="square" style="--i:4"></div>
                </div> -->


            </div>
        </div>
    </section>
</main>

